options {
        directory "/var/cache/bind";
        forwarders {
                8.8.8.8;
                8.8.4.4;
                1.1.1.1;
        };
        foward only;

        listen-on { any; };
        listen-on-v6 { any; };
        allow-query {
                any;
        };
        allow-recursion {
                none;
        };
        allow-transfer {
                none;
        };
        allow-update {
                none;
        };
};
